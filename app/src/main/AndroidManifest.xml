<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/kicker"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kicker"
        android:supportsRtl="true"
        android:theme="@style/Theme.MWYouthFootballPortal"
        tools:targetApi="31">
        <activity android:name=".UI.Agents.AgentActivity"
            android:exported="false"
            android:theme="@style/Theme.MWYouthFootballPortal"/>
        <activity
            android:name=".UI.Agents.AgentSignupActivity"
            android:exported="false"
            android:label="@string/title_activity_agent_signup"
            android:theme="@style/Theme.MWYouthFootballPortal.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".UI.Agents.AgentLoginActivity"
            android:exported="false"
            android:label="AgentLoginActivity"
            android:theme="@style/Theme.MWYouthFootballPortal.NoActionBar"/>
        <activity
            android:name=".UI.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.MWYouthFootballPortal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MWYouthFootballPortal" />
        <activity
            android:name=".UI.LandingActivity"
            android:exported="true" />
    </application>

</manifest>